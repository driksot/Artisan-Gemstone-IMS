@page "/"

<PageTitle>Home</PageTitle>

<MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.False">
    <MudGrid>
        <MudItem xs="12" sm="6" md="4">
            <ProductCount />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <CustomerCount />
        </MudItem>
        <MudItem xs="12" sm="12" md="4">
            <LowInventoryCount />
        </MudItem>
        <MudItem xs="12" sm="12">
            <MudPaper Elevation="2" Class="pa-4 d-flex flex-column align-center justify-space-evenly" Style="height: 650px;">
                <MudText Typo="Typo.h5" Color="Color.Primary">@(("Inventory Stock Levels").ToUpper())</MudText>
                <MudChart
                    ChartType="ChartType.Line"
                    ChartSeries="@Series"
                    @bind-SelectedIndex="SelectedIndex"
                    XAxisLabels="@XAxisLabels"
                    ChartOptions="@_options"
                    Width="100%"
                    Height="500px">
                </MudChart>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>
